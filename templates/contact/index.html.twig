{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}
	<div class="encadrement-form">
		<h1 class="text-center">Formulaire de contact</h1>

		<br>

		{{ form_start(form) }}

		<div class="row">
			<div class="col">
				{{ form_row(form.email)}}
			</div>
			<div class="col">
				{{ form_row(form.phone)}}
			</div>
		</div>

		{{ form_row(form.object)}}
		{{ form_row(form.content)}}
		{{ form_row(form.agreeTerms)}}

		<br>

		{{ form_row(form.submit)}}

		{{ form_end(form) }}

	</div>
{% endblock %}
