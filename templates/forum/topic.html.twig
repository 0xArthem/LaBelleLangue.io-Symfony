{% extends 'base.html.twig' %}

{% block title %}Hello ForumController!
{% endblock %}

{% block body %}
	<div class="encadrement">
		<h1 class="text-center">Forum</h1>

		<br>

		<a class="text-dark">
			<i class="fas fa-caret-right me-1"></i>
			{{ topic.article.title }}
		</a>
		<h2>
			{{ topic.title}}
		</h2>

		<p class="card-text">
			Publi√© le
			{{ topic.createdAt|date('d/m/y')}}
		</p>

		{% if topic.message %}
			<p>
				{{ topic.message|raw }}
			</p>
		{% endif %}

	</div>
{% endblock %}
