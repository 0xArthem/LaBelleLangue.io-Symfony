{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de votre mot de passe
{% endblock %}

{% block body %}
	<div class="encadrement-form">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<h1 class="text-center">Réinitialiser votre mot de passe</h1>

		<br>

		{{ form_start(requestForm) }}
		{{ form_row(requestForm.email) }}

		<br>

		<div>
			<p>
				Entrez l'adresse électronique associée à votre compte.
				<br>
				Vous recevrez un mail avec un lien de réinitialisation de votre mot de passe.
			</p>
		</p>
	</div>

	<button class="btn btn-dark">Envoyer le mail de réinitialisation</button>
	{{ form_end(requestForm) }}
</div>{% endblock %}
